<?xml version="1.0" encoding="UTF-8"?>
<con:tc-config xmlns:con="http://www.terracotta.org/config">
   <application>
      <dso>
         <roots>
            <root>
               <field-name>org.terracotta.workmanager.pipe.PipeManager.m_pipes</field-name>
            </root>
         </roots>
         <instrumented-classes>
            <include>
               <class-expression>org.terracotta.workmanager..*</class-expression>
               <honor-transient>true</honor-transient>
            </include>
            <include>
               <class-expression>au.id.jericho..*</class-expression>
            </include>
            <include>
               <class-expression>commonj.work.WorkException</class-expression>
            </include>
         </instrumented-classes>
         <locks>
            <autolock>
               <method-expression>* *..*.*(..)</method-expression>
               <lock-level>write</lock-level>
            </autolock>
         </locks>
      </dso>
   </application>
   <system>
      <configuration-model>development</configuration-model>
   </system>
   <servers>
      <server name="localhost">
         <dso-port>9510</dso-port>
         <jmx-port>9520</jmx-port>
         <data>terracotta/server-data</data>
         <logs>terracotta/server-logs</logs>
      </server>
      <update-check>
        <enabled>true</enabled>
      </update-check>
   </servers>
   <clients>
      <logs>terracotta/client-logs</logs>
      <dso>
         <fault-count>0</fault-count>
      </dso>
   </clients>
</con:tc-config>
